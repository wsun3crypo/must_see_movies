<div class="card mb-3">
  <h2 class="card-header h4">
    Movie #<%= movie.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Description</dt>
      <dd><%= movie.description %></dd>

      <dt>Director</dt>
      <dd>
        <% if @movie.director.present? %>
          <%= link_to movie.director, movie.director %>
        <% end %>
      </dd>

      <dt>Title</dt>
      <dd><%= movie.title %></dd>

      <dt>Year</dt>
      <dd><%= movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= movie.duration %></dd>

      <dt>Image</dt>
      <dd>
        <div>
          <%= render partial: "movies/one_photo_map" %>
        </div>
      </dd>

      <dt>Numbers of characters</dt>
      <dd><%= movie.numbers_of_characters %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back movie, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_movie_url(movie), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to movie, method: :delete, data: { confirm: "Do you really want to delete this movie?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(movie.updated_at) %> ago
  </div>
</div>
